FROM alpine:latestLABEL maintainer="irm@us.es"RUN apk add --update --no-cache openrcRUN apk add --update --no-cache opensshRUN rc-update add sshdRUN apk add --update --no-cache gitRUN echo 'PasswordAuthentication yes' >> /etc/ssh/sshd_configRUN adduser -h /home/nombreUsuario -s /bin/sh -D nombreUsuarioRUN echo -n 'nombreUsuario:claveacceso' | chpasswdENTRYPOINT ["/entrypoint.sh"]EXPOSE 22COPY entrypoint.sh /